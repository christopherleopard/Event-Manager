<!DOCTYPE html>
<html>
  <head>
    <title>Admin Login</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <div class="d-flex">
      <!-- Left Image Column -->
      <div class="col-lg-4" style="background-image: url('<%= asset_path("login_side.png") %>');"></div>

      <!-- Right Form Column -->
      <div class="col-lg-8">
        <!-- Logo at top -->
        <div class="mb-10">
          <%= image_tag("logo.png", alt: "Admin Logo", class: "h-12") %>
        </div>

        <!-- Centered form -->
        <div class="flex-grow flex items-center justify-center">
          <div class="w-full max-w-md">
            <h1 class="text-3xl font-bold mb-6">Hello! Please sign in below.</h1>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>