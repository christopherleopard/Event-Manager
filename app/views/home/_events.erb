<div class="events">
  <% @events.each do |event| %>
    <div class="d-flex px-4 py-3 align-items-center gap-3 event_item">
      <div class="event_date text-center">
        <p class="text-red fw-semibold mb-0"><%= event.starts_at_date.strftime("%A") %></p>
        <h1 class="text-red fw-semibold mb-0"><%= event.starts_at_date.strftime("%d") %></h1>
        <p class="text-red fw-semibold mb-0"><%= event.starts_at_date.strftime("%B") %></p>
      </div>
      <div class="event_data">
        <p class="text-red fw-semibold event_title mb-0"><%= event.name %></p>
        <p class="event_time mb-0"><%= event.starts_at_time&.strftime("%-I:%M %p") if event.starts_at_time.present? %></p>
        <p class="mb-0"><%= truncate(event.description, length: 100) %></p>
      </div>
    </div>
  <% end %>
</div>