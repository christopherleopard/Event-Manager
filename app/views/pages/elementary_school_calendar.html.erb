<% content_for :title, "Whitmore Lake Public Schools Facilities | Rentals & Community Use" %>
<% content_for :description, "Reserve Whitmore Lake Public Schools facilities for events, meetings, and performances. Learn about rental policies, available spaces, and booking details." %>

<div class="district_calendar">
    <div class="page_heading p-20" style="background-image: url('/assets/bg_2.png');">
        <h2 class="text-center text-white mb-0">Upcoming Events</h2>
    </div>
    <div class="red_button_bar primary-bg py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <button class="calendar_btn">
                <%= link_to "Athletic Calendar", "https://whitmorelakeathletics.com/main/calendar", target: "_blank", class:"text-white ff-b" %>
            </button>
            <button class="calendar_btn">
                <%= link_to "Community Recreation Calendar", "/community-recreation-calendar", class:"text-white ff-b" %>
            </button>
            <button class="calendar_btn">
                <%= link_to "BOE & District Calendar", "/district-calendar", class:"text-white ff-b" %>
            </button>
            <button class="calendar_btn">
                <%= link_to "Main Street Campus Calendar", "/main-street-campus-calendar", class:"text-white ff-b" %>
            </button>
            <button class="calendar_btn">
                <%= link_to "Elementary School Calendar", "/elementary-school-calendar", class:"text-white ff-b" %>
            </button>
            <button class="calendar_btn">
                <%= link_to "Middle & High School Calendar", "/middle-and-high-school-calendar", class:"text-white ff-b" %>
            </button>
        </div>
    </div>
    <div class="py-4_5">
        <div class="container">
            <h1 class="text-black">Elementary School Calendar</h1>
            <% if @elementary_school_calendar_pdfs.any? %>
                <% @elementary_school_calendar_pdfs.each do |pdf_doc| %>
                    <% if pdf_doc.pdf.attached? %>
                        <button class="rule_btn py-3">
                            <%= link_to pdf_doc.title, rails_blob_path(pdf_doc.pdf, disposition: "attachment", only_path: true), class:"text-white", target: "_blank", rel: "noopener" %>
                        </button>
                    <% end %>
                <% end %>
            <% end %>
        </div>
        <div class="container mt-4">
            <iframe 
            src="https://calendar.google.com/calendar/u/0/htmlembed?src=7fjpfl350dc9chpr2qj6sv5c9c@group.calendar.google.com&ctz=America/New_York" 
            style="border: 0"
            width="100%"
            height="700" 
            frameborder="0" 
            scrolling="no">
            </iframe>
        </div>
    </div>
</div>
